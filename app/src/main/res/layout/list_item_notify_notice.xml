<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="16dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivUserPhoto"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/dd_logo_placeholder"
        app:civ_border_color="@color/colorPrimaryDarkV2"
        app:civ_border_width="1dp" />

    <com.tylersuehr.socialtextview.SocialTextView
        android:id="@+id/stvMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="2dp"
        android:layout_weight="1"
        android:fontFamily="@font/montserrat"
        android:text="Hello Ding Dongers, there is some important update regarding #dingdong application. "
        android:textColor="@color/colorTextH2"
        app:hashtagColor="@color/colorHashtag" />

</LinearLayout>