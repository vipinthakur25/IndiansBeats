<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDarkV6"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Redemption Confirmation"
        android:textColor="@color/colorTextTitle"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"
        android:textSize="16sp"
        android:padding="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDarkV2"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Are you sure, want to request payout for this month? Also note that credit to your bank may take upto 72 hours, which may differ from bank to bank."/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvOkay"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/bg_button_gradient"
            android:fontFamily="@font/montserrat_bold"
            android:text="Okay"
            android:textColor="@color/colorAccentV1"
            android:textSize="18dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:gravity="center" />

        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/bg_button_white"
            android:fontFamily="@font/montserrat_bold"
            android:text="Cancel"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:gravity="center"/>

    </LinearLayout>

</LinearLayout>