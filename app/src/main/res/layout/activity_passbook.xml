<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    tools:context=".modules.passbook.PassbookActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivGoBack"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|start"
                android:padding="14dp"
                app:srcCompat="@drawable/ic_dd_back_white" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center"
                android:text="@string/passbook"
                android:textColor="@color/colorTextTitle"
                android:textSize="16sp" />

        </FrameLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:indeterminate="true"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/lhCoins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvAvailableCoins"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="0"
                        android:fontFamily="@font/montserrat_bold"
                        android:textColor="@color/colorTextTitle"
                        android:textSize="45dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/colorTextTitle"
                    android:text="Available Coins" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvBuyCoin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_button_gradient"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="center"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:text="Buy Coin"
                    android:textColor="@color/colorTextTitle"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvRedeemCoin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_button_gradient"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="center"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:text="Redeem Coin"
                    android:textColor="@color/colorTextTitle"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_passbook_v3"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total Earning"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:fontFamily="@font/montserrat"
                        android:textColor="@color/colorPrimaryDarkV2"/>

                    <TextView
                        android:id="@+id/tvTotalEarning"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBrandYellowV2"
                        android:fontFamily="@font/montserrat_bold"
                        android:textSize="25sp"
                        android:gravity="center"
                        android:text="0"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/bg_passbook_v3"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total Spending"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:fontFamily="@font/montserrat"
                        android:textColor="@color/colorPrimaryDarkV2"/>

                    <TextView
                        android:id="@+id/tvTotalSpending"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/colorBrandYellowV2"
                        android:fontFamily="@font/montserrat_bold"
                        android:textSize="25sp"
                        android:text="0"/>


                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Daily Activities"
                android:textColor="@color/colorTextTitle"
                android:textSize="20sp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/montserrat"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_passbook_v3"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Time spent in app"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:fontFamily="@font/montserrat"
                        android:textColor="@color/colorPrimaryDarkV2"/>

                    <TextView
                        android:id="@+id/tvTimeSpend"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBrandYellowV2"
                        android:fontFamily="@font/montserrat_bold"
                        android:textSize="25sp"
                        android:gravity="center"
                        android:text="0"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/bg_passbook_v3"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Daily Check-In"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:fontFamily="@font/montserrat"
                        android:textColor="@color/colorPrimaryDarkV2"/>

                    <TextView
                        android:id="@+id/tvDailyCheckIn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/colorBrandYellowV2"
                        android:fontFamily="@font/montserrat_bold"
                        android:textSize="25sp"
                        android:text="0"/>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_passbook_v3"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Video Uploads"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:fontFamily="@font/montserrat"
                        android:textColor="@color/colorPrimaryDarkV2"/>

                    <TextView
                        android:id="@+id/tvVideoUploads"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBrandYellowV2"
                        android:fontFamily="@font/montserrat_bold"
                        android:textSize="25sp"
                        android:gravity="center"
                        android:text="0"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/bg_passbook_v3"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="From your fans"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:fontFamily="@font/montserrat"
                        android:textColor="@color/colorPrimaryDarkV2"/>

                    <TextView
                        android:id="@+id/tvFromYourFans"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/colorBrandYellowV2"
                        android:fontFamily="@font/montserrat_bold"
                        android:textSize="25sp"
                        android:text="0"/>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_button_gradient"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Subscription Earning"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/colorTextTitle"/>

                <TextView
                    android:id="@+id/tvSubscriptionCoin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTextTitle"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="25sp"
                    android:gravity="center"
                    android:text="0"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:text="We reward on:"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/colorTextTitle"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="0"
                        android:gravity="center"
                        android:fontFamily="@font/montserrat_bold"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/bg_passbook_v3"
                        android:textColor="@color/colorBrandYellowV2"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Every 10 min spend in app"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:paddingTop="8dp"
                        android:paddingStart="8dp"
                        android:paddingBottom="8dp"
                        android:background="@drawable/bg_passbook_v3"
                        android:textColor="@color/colorTextTitle"
                        android:fontFamily="@font/montserrat"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="0"
                        android:gravity="center"
                        android:fontFamily="@font/montserrat_bold"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/bg_passbook_v3"
                        android:textColor="@color/colorBrandYellowV2"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Daily Check-In"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:paddingTop="8dp"
                        android:paddingStart="8dp"
                        android:paddingBottom="8dp"
                        android:background="@drawable/bg_passbook_v3"
                        android:textColor="@color/colorTextTitle"
                        android:fontFamily="@font/montserrat"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="0"
                        android:gravity="center"
                        android:fontFamily="@font/montserrat_bold"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/bg_passbook_v3"
                        android:textColor="@color/colorBrandYellowV2"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Whenever you upload video"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:paddingTop="8dp"
                        android:paddingStart="8dp"
                        android:paddingBottom="8dp"
                        android:background="@drawable/bg_passbook_v3"
                        android:textColor="@color/colorTextTitle"
                        android:fontFamily="@font/montserrat"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>



</LinearLayout>