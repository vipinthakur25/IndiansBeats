<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".modules.profile.view.activity.ContactSupportActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivGoBack"
                app:srcCompat="@drawable/ic_dd_back_white"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|start"
                android:padding="14dp" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center"
                android:text="@string/contact_support"
                android:textColor="@color/colorTextTitle"
                android:textSize="16sp" />

        </FrameLayout>

    </LinearLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/lhMailUs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="support@ddcreators.com"
                android:textColor="@color/colorTextTitle"
                android:fontFamily="@font/montserrat"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_gmail"
                android:drawablePadding="10dp"
                android:textSize="16sp"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="16dp"
                app:srcCompat="@drawable/ic_dd_arrow_right"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lhChatWithUs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/chat_with_us"
                android:textColor="@color/colorTextTitle"
                android:fontFamily="@font/montserrat"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_chat"
                android:drawablePadding="10dp"
                android:textSize="16sp"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="16dp"
                app:srcCompat="@drawable/ic_dd_arrow_right"/>
        </LinearLayout>
    </LinearLayout>

</ScrollView>
</LinearLayout>