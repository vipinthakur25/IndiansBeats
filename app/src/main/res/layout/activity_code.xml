<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    tools:context=".auth.CodeActivity">

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:indeterminate="true" />

    <TextView
        android:id="@+id/tvCodeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="Enter code"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textSize="25sp"
        android:textColor="@color/colorAccentV1" />

    <TextView
        android:id="@+id/tvCodeDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:text="Please enter code the received on phone number 0000000000"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textSize="16sp"
        android:textColor="@color/colorAccentV1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <EditText
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/bg_edittext"
            android:fontFamily="@font/montserrat_bold"
            android:maxLength="1"
            android:autofillHints="password"
            android:layout_weight="1"
            android:layout_marginEnd="2dp"
            android:inputType="number"
            android:gravity="center" />

        <EditText
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/bg_edittext"
            android:fontFamily="@font/montserrat_bold"
            android:maxLength="1"
            android:autofillHints="password"
            android:layout_weight="1"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:inputType="number"
            android:gravity="center" />

        <EditText
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/bg_edittext"
            android:fontFamily="@font/montserrat_bold"
            android:maxLength="1"
            android:autofillHints="password"
            android:layout_weight="1"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:inputType="number"
            android:gravity="center" />

        <EditText
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/bg_edittext"
            android:fontFamily="@font/montserrat_bold"
            android:maxLength="1"
            android:autofillHints="password"
            android:layout_weight="1"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:inputType="number"
            android:gravity="center" />

        <EditText
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/bg_edittext"
            android:fontFamily="@font/montserrat_bold"
            android:maxLength="1"
            android:autofillHints="password"
            android:layout_weight="1"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:inputType="number"
            android:gravity="center" />

        <EditText
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/bg_edittext"
            android:fontFamily="@font/montserrat_bold"
            android:maxLength="1"
            android:autofillHints="password"
            android:layout_weight="1"
            android:layout_marginStart="2dp"
            android:inputType="number"
            android:gravity="center" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvSendOtp"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/bg_button_gradient"
        android:fontFamily="@font/montserrat_bold"
        android:text="Verify code"
        android:textColor="@color/colorAccentV1"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

</LinearLayout>