<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".modules.create.SoundDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivGoBack"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|start"
                android:padding="14dp"
                app:srcCompat="@drawable/ic_dd_back_white" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center"
                android:text="Sound Info"
                android:textColor="@color/colorTextTitle"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/ivSettings"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|end"
                android:padding="12dp"
                app:srcCompat="@drawable/dd_fav_sound_unchecked" />

        </FrameLayout>

    </LinearLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivPhoto"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/emma"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvSoundTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mega Francesita 2017 (Remix)"
                        android:textColor="@color/colorTextTitle"
                        android:fontFamily="@font/montserrat_bold"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/tvUserHandle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="DJ KBZ"
                        android:textColor="@color/colorPrimaryDarkV2"
                        android:fontFamily="@font/montserrat"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tvVideoCount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1.7M videos"
                        android:textColor="@color/colorPrimaryDarkV2"
                        android:fontFamily="@font/montserrat"
                        android:textSize="14sp"/>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@color/colorPrimaryDarkV3"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:visibility="gone">

            </LinearLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp">

<!--                <androidx.recyclerview.widget.RecyclerView-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="match_parent" />-->

                <ImageView
                    android:id="@+id/ivCreate"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:layout_gravity="bottom|center"
                    android:contentDescription="@string/create_video" />

            </FrameLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>



</LinearLayout>