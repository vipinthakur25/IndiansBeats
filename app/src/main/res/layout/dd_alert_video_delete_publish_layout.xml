<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/bg_button_gradient"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvDDTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"
        android:text="Delete Video?"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp" />

<!--    <View-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="1dp"-->
<!--        android:background="@color/colorPrimaryDarkV2"/>-->

    <ImageView
        android:id="@+id/ivVideoCover"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:src="@drawable/emma"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvPublish"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:text="Publish"
            android:layout_weight="1"
            android:textColor="@color/colorPrimary" />

        <View
            android:layout_width="2dp"
            android:layout_height="20dp"
            android:background="@color/colorTextTitle"/>

        <TextView
            android:id="@+id/tvDelete"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:text="Delete"
            android:layout_weight="1"
            android:textColor="@color/colorPrimary" />

        <View
            android:layout_width="2dp"
            android:layout_height="20dp"
            android:background="@color/colorTextTitle"/>

        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:text="Cancel"
            android:layout_weight="1"
            android:textColor="@color/colorPrimary" />

    </LinearLayout>


</LinearLayout>